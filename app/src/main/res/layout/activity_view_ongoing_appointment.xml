<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="none.pams_new.ViewOngoingAppointment">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/angry_btn"

            android:text="Ongoing"
            android:textColor="#2E9AFE"
            android:textSize="15sp"

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_ongoing_selected"
            />
        <Button
            android:id="@+id/btn_historical"

            android:text="Historical"
            android:textColor="#FFFF"
            android:textSize="15sp"

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/button_historical_unselected"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/angry_btn"
            android:layout_toEndOf="@+id/angry_btn" />
    </RelativeLayout>


    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:isScrollContainer="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#80FFFFFF"
        android:layout_marginTop="10dp"></ListView>


</RelativeLayout>
