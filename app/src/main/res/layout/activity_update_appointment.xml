<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="none.pams_new.UpdateAppointment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#2E9AFE"
            android:textColor="#fff"
            android:text="Choose a date"
            android:id="@+id/btnCalendar1"
            android:layout_marginRight="15dp"></Button>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:id="@+id/txtCalendar1"
            android:textColor="#000"
            android:layout_weight="0.75"
            android:layout_gravity="bottom|right"
            android:gravity="left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1"
        android:orientation="horizontal"
        android:layout_below="@+id/l"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:text="CHOOSE TIMESLOT"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:id="@+id/t" />

        <Spinner
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:prompt="@string/timeslot_prompt"
            android:id="@+id/spinnerTimeslot1"
            android:spinnerMode="dialog"
            android:gravity="center_horizontal"
            android:layout_weight="0.9"
            android:layout_gravity="right"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/l1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="CHOOSE TREATMENT"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="1.22" />

        <TextView
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTreatment"

            android:layout_weight="0.9"
            android:gravity="center"
            android:layout_gravity="right"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="MATCH DOCTOR"
            android:textColor="#fff"
            android:background="#2E9AFE"
            android:id="@+id/btnFindDoctor1"
            android:layout_marginRight="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:editable="false"
            android:layout_height="wrap_content"
            android:id="@+id/txtFindDoctor1"
            android:textColor="#000"
            android:layout_weight="0.75" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="CHOOSE CLINIC"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginRight="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/clinic_prompt"
            android:id="@+id/spinnerClinic1"
            android:spinnerMode="dialog"
            android:layout_weight="0.9"
            android:layout_gravity="right"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3">

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Update Appointment"
        android:textColor="#fff"
        android:background="#2E9AFE"
        android:id="@+id/btnSubmit1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />
</RelativeLayout>
